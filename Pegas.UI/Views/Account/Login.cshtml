@model Pegas.UI.Models.LoginModel
@{
    ViewBag.Title = "Pegas Operation";
    ViewBag.ReturnUrl = HttpContext.Current.Request.Url.Query;
    Layout = null;
}

<!DOCTYPE html>
<html dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../Content/Template/Images/favicon.png">
    <title>Monster admin Template - The Ultimate Multipurpose admin template</title>
    <link rel="canonical" href="https://www.wrappixel.com/templates/monsteradmin/" />
    <!-- Custom CSS -->
    <link href="~/Content/Template/Css/style.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(../Content/Template/Images/background/login-register.jpg) no-repeat center center; background-size: cover;">
            <div class="auth-box on-sidebar p-4 bg-white m-0">
                <div id="loginform">
                    <div class="logo text-center">
                        <span class="db">
                            <img src="~/Content/Template/Images/logo-icon.png" alt="logo" />
                            <img src="~/Content/Template/Images/logo-text.png" alt="Home" />
                        </span>
                    </div>
                    <div class="col-xs-12">
                        <span style="font-weight: bold;">@TempData["ErrorMessage"]</span>
                    </div>
                    <!-- Form -->
                    <div class="row">
                        <div class="col-12">
                            @using (Html.BeginForm("Authenticate", "Account", new { returnUrl = ViewBag.ReturnUrl, }, FormMethod.Post, null))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-group mb-3">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(model => model.UserName, "Username")
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @type = "text" })
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(model => model.Password, "Password")
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="d-flex">
                                        @*<div class="checkbox checkbox-info float-left pt-0">
                                                <input id="checkbox-signup" type="checkbox" class="material-inputs chk-col-indigo">
                                                <label for="checkbox-signup"> Remember me </label>
                                            </div>*@
                                        <div class="ml-auto">
                                            <a href="javascript:void(0)" id="to-recover" class="text-muted float-right"><i class="fa fa-lock mr-1"></i> Forgot pwd?</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-center mt-3">
                                    <div class="col-xs-12">
                                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div id="recoverform">
                    <div class="logo text-center">
                        <h3 class="font-weight-medium mb-3">Recover Password</h3>
                        <span>Enter your username your new password will be sent to you!</span>
                    </div><div class="col-xs-12">
                        <span style="font-weight: bold;">@TempData["Notification"]</span>
                    </div>
                    <div class="col-12">
                        @using (Html.BeginForm("ForgotPS", "Account", new { returnUrl = ViewBag.ReturnUrl, }, FormMethod.Post, null))
                        {
                            <div class="form-group mb-3">
                                <div class="col-xs-12">
                                    @Html.LabelFor(model => model.UserName, "Username")
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @type = "text" })
                                    @Html.ValidationMessageFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="ml-auto">
                                <a href="javascript:void(0)" id="to-login" class="text-muted float-right"><i class="fa fa-lock mr-1"></i> Back to login?</a>
                            </div>
                            <span>&nbsp;</span>
                            <div class="form-group text-center mt-3">
                                <div class="col-xs-12">
                                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper scss in scafholding.scss -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right Sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="~/Scripts/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Scripts/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $('[data-toggle="tooltip"]').tooltip();
        $(".preloader").fadeOut();
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });

        $('#to-login').on("click", function () {
            $("#recoverform").slideUp();
            $("#loginform").fadeIn();
        });
    </script>
</body>
</html>