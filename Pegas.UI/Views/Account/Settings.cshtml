<!-- Column -->
<!-- Column -->
<div class="col-lg-8 col-xlg-9 col-md-7">
    <div class="card">
        <!-- Tabs -->
        <ul class="nav nav-pills custom-pills" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" id="pills-setting-tab" data-toggle="pill" href="#settings" role="tab" aria-controls="pills-setting" aria-selected="false">Setting</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-change-password-tab" data-toggle="pill" href="#change-password" role="tab" aria-controls="pills-changepassword" aria-selected="false">Change Password</a>
            </li>
        </ul>
        <!-- Tabs -->
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="pills-setting-tab">
                <div class="card-body">
                    <form class="form-horizontal form-material">
                        <div class="form-group">
                            <label class="col-md-12">Full Name</label>
                            <div class="col-md-12">
                                <input type="text" placeholder="Johnathan Doe" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="example-email" class="col-md-12">Email</label>
                            <div class="col-md-12">
                                <input type="email" placeholder="johnathan@admin.com" class="form-control form-control-line" name="example-email" id="example-email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Phone No</label>
                            <div class="col-md-12">
                                <input type="text" placeholder="123 456 7890" class="form-control form-control-line">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12">Message</label>
                            <div class="col-md-12">
                                <textarea rows="5" class="form-control form-control-line"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12">Select Country</label>
                            <div class="col-sm-12">
                                <select class="form-control form-control-line">
                                    <option>London</option>
                                    <option>India</option>
                                    <option>Usa</option>
                                    <option>Canada</option>
                                    <option>Thailand</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-success">Update Profile</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="tab-pane fade active show" id="change-password" role="tabpanel" aria-labelledby="pills-change-password-tab">

                <div class="form-horizontal form-material">
                    @using (Html.BeginForm("ChangePassword", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null))
                    {
                        @Html.ValidationSummary(true)
                        <div class="col-md-12">
                            <span style="font-weight: bold;">@TempData["ErrorMessage"]</span>
                        </div>
                        <div style="visibility:hidden;">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-line", @value = Session["Username"], @type = "text" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.OldPassword, "Current Password", new { @class = "col-md-12" })
                                @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control form-control-line", @type = "password" })
                                @Html.ValidationMessageFor(model => model.OldPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.NewPassword, "New Password", new { @class = "col-md-12" })
                                @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control form-control-line", @type = "password" })
                                @Html.ValidationMessageFor(model => model.NewPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.NewPasswordAgain, "New Password (Again)", new { @class = "col-md-12" })
                                @Html.TextBoxFor(model => model.NewPasswordAgain, new { @class = "form-control form-control-line", @type = "password" })
                                @Html.ValidationMessageFor(model => model.NewPasswordAgain)
                            </div>
                        </div>
                        <span>&nbsp;</span>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button class="btn btn-success" type="submit" value="Update Password">Update Password</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>